<%- include("template/cabecera", { tituloWeb: "Descuento"}) %>

<div class="container-fluid container_general_dto  ">
  <div class="d-flex justify-content-center">
    <div class="container-publicidad d-flex justify-content-center w-100 ">
      <div class="container-btn-flex">
        <a href="javascript: history.go(-1)" class="btn btn-dark mb-4 btn-volver"
          ><i class="fas fa-angle-left me-2"></i>Volver</a
        >
        <div class="container-publi-info d-flex">
          <div class="publicidad-comercio box-shadow d-flex">
            <p
              class="
                dto-badge
                m-3
                d-flex
                justify-content-center
                align-items-center
                position-absolute
              "
            >
              <%= cliente.dtocirculo %>
            </p>
            <img src="<%= cliente.imgURL %>" alt="publicidad comercio" class='img-publicidad w-100' />
          </div>

          <div class="comercio-info">
            <h2 class="title-comercio mb-3"><%= cliente.nombre %></h2>
            <p>
              <i class="fas fa-map-marker-alt i-direccion"></i> <%=
              cliente.direccion %>
            </p>
            <p>
              <i class="fas fa-phone-alt i-telefono"></i> <%= cliente.telefono
              %>
            </p>
            <ul class="d-flex rrss-comercio">
              <li>
                <a href="<%= cliente.web %>" target="_blank"
                  ><i class="fas fa-link"></i
                ></a>
              </li>
              <li>
                <a
                  href="https://www.instagram.com/<%= cliente.ig %>"
                  target="_blank"
                  ><i class="fab fa-instagram"></i
                ></a>
              </li>
              <li>
                <a
                  href="https://www.facebook.com/<%= cliente.fb %>"
                  target="_blank"
                  ><i class="fab fa-facebook-f"></i
                ></a>
              </li>
            </ul>
            <hr />
            <div class="descuento-info d-flex align-items-center">
              <img
                src="../img/sale.png"
                alt="etiqueta-descuento"
                class="sale-icon me-2"
              />
              <p class="p-descuentos"><%= cliente.descuento %></p>
            </div>

            <div class="descuento-info d-flex align-items-center">
              <img
                src="../img/sale.png"
                alt="etiqueta-descuento"
                class="sale-icon me-2"
              />
              <p class="p-descuentos"><%= cliente.descuento2 %></p>
            </div>
            <hr />
            <div class="suscribirse">
              <p>Acced√© a este y todos los descuentos de los comercios adheridos</p>
              <a
                href="/suscripciones"
                class="btn btn-primary"
                >Suscribite | $180 por mes</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="../js/script.js"></script>
